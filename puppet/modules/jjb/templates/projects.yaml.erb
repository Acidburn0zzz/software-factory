- project:
    name: config
    node: master
    jobs:
      - '{name}-update'
      - '{name}-check'

- project:
    name: zuul-demo
    node: <%= @settings['jenkins_default_slave'] %> 
    periodic_cmd: |
      echo "Running periodic tests"
      ./run_functional-tests.sh
    jobs:
      - '{name}-unit-tests'
      - '{name}-functional-tests'
      - 'periodic-{name}'
