<VirtualHost *:80>
    ServerName <%= scope.function_hiera(["managesf_url"]) %>
    WSGIDaemonProcess managesf user=www-data group=www-data python-path=/var/www/managesf/
    WSGIScriptAlias / /var/www/managesf/app.wsgi
    WSGIPassAuthorization On
    <Directory /var/www/managesf/>
        WSGIProcessGroup managesf
        WSGIApplicationGroup %{GLOBAL}
        Order deny,allow
        Allow from all
        AuthType mod_auth_pubtkt
        TKTAuthLoginURL <%= @cauth['signin_url'] %>
        TKTAuthFakeBasicAuth on
        TKTAuthDebug 1
        require valid-user
    </Directory>
</VirtualHost>
