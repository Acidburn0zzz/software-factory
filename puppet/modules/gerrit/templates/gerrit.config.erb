[gerrit]
	basePath = git
	canonicalWebUrl = http://<%= @canonical_weburl %>
[database]
    type = MYSQL
    hostname = <%= @mysql_address %>
    database = <%= @gerrit_mysql_db %>
    username = <%= @gerrit_mysql_username %>
    port = <%= @mysql_port %>
[auth]
	type = OPENID
[container]
	user = gerrit
	javaHome = /usr/lib/jvm/java-7-openjdk-amd64/jre
[sshd]
	listenAddress = <%= @sshd_listen_address %>
[httpd]
    listenUrl = http://*:<%= @http_listen_port %>/
