[gerrit]
    basePath = <%= @repo_base_path %>
	canonicalWebUrl = <%= @weburl %>
    canonicalGitUrl = <%= @giturl %>
    gitHttpUrl = <%= @httpurl %>
    reportBugUrl = <%= @reportbugurl %>
[database]
    type = MYSQL
    hostname = <%= @mysql_address %>
    database = <%= @gerrit_mysql_db %>
    username = <%= @gerrit_mysql_username %>
    port = <%= @mysql_port %>
[auth]
    type = LDAP
    gitBasicAuth = <%= @http_basic_auth %>
[ldap]
    server = <%= @ldap_address %>
    # lookup user that can read the trees
    username = <%= @ldap_username %>
    accountBase = <%= @ldap_account_base %>
    accountPattern = <%= @ldap_account_pattern %>
    accountEmailAddress = <%= @ldap_account_email_address %>
    # we don't use LDAP groups
    #groupBase = <%= @ldap_group_base %>
    #groupMemberPattern = <%= @ldap_group_pattern %>
[container]
	user = gerrit
	javaHome = /usr/lib/jvm/java-7-openjdk-amd64/jre
[sshd]
	listenAddress = <%= @sshd_listen_address %>
[httpd]
    listenUrl = <%= @http_listen_address %>
[sendmail]
    enable = true
    smtpEncryption = none
    from = MIXED
    smtpServer = <%= @smtp_server %>
    smtpServerPort = <%= @smtp_server_port %>
    smtpUser = <%= @smtp_user %>
[suggest]
    accounts = true
    from = 2
