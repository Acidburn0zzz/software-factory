#!/bin/sh

set -x
set -e

JENKINS_SSHKEY="<%= @gerrit_jenkins_sshkey %>"
ADMINUSER=<%= @gerrit_admin_username %>

echo "$JENKINS_SSHKEY" | ssh -i /home/gerrit/site_path/etc/ssh_host_rsa_key -p29418 $ADMINUSER@localhost gerrit create-account jenkins -g \"Non-Interactive Users\" --email jenkins@localhost --full-name \"Jenkins CI\" --ssh-key -
