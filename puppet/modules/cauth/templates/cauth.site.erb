<VirtualHost *:80>
    ServerName <%= scope.function_hiera(["auth_url"]) %>
    WSGIDaemonProcess cauth user=www-data group=www-data python-path=/var/www/cauth/
    WSGIScriptAlias / /var/www/cauth/app.wsgi
    WSGIPassAuthorization On
    <Directory /var/www/cauth/>
        WSGIProcessGroup cauth
        WSGIApplicationGroup %{GLOBAL}
        Order deny,allow
        Allow from all
    </Directory>
</VirtualHost>
